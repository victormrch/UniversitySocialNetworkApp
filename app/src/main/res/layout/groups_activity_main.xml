<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Groups">

    <TextView
        android:id="@+id/tvGroups"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="@dimen/margen_texto_principal_groups"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="@string/my_groups"
        android:textColor="@color/colorFondoIcono"
        android:textSize="@dimen/tamano_txt_principal_groups"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvGroups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margen_boton"
        android:background="@color/colorPrimary"
        android:padding="@dimen/relleno_boton"
        android:text="@string/btn_news_groups"
        android:textColor="@color/colorPrimaryDark" />


</LinearLayout>